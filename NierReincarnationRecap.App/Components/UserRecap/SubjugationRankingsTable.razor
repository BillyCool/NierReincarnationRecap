@using NierReincarnationRecap.Model.Dto
@using NierReincarnationRecap.Model.Enums

<MudTable Items="SubjugationRankings" Breakpoint="Breakpoint.None" Dense FixedHeader Height="300px">
    <HeaderContent>
        <MudTh>Season</MudTh>
        <MudTh>Element</MudTh>
        <MudTh>Score</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Season">@context.Season</MudTd>
        <MudTd DataLabel="Element">@context.AttributeType.GetDisplayName()</MudTd>
        <MudTd DataLabel="Score">@context.Score.ToSubjugationToRank()</MudTd>
    </RowTemplate>
</MudTable>

@code {
    [Parameter][EditorRequired] public required List<SubjugationRankingDto> SubjugationRankings { get; set; }
}
